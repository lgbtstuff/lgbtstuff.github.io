p.content
    h1.map < "The Map"
    div.equaldex
        "Click "
        a(href: "http://equaldex.com") < "here"
        " for a link to the equaldex. (External Page)"
    div.introMap
        "Mouse over the abbreviation of any state to get more information."
    div.map
        img.map#map
            src: "images\map.gif"
            alt: "Legislation Map"
            width: "745px"
            height: "429px"
            usemap: "#legislation"

        map.legislation
            name: "legislation"
            area#TX
                shape: "rect"
                coords: "0, 0, 60, 60"
                alt: "Texas"
                onmouseover: "tooltipInfo( "Texas" )"

        span
            div#tooltipHeader < "State Name"
            div#tooltip < "Further information on the legislation of that state."

    script
        stateSetUp();
        getElementbyId( "map" ).scrollLeft = 1065;
