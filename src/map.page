p.content
    h1.map < "The Map"
    div.introMap < "Mouse over the abbreviation of any state to get more information."
    div.map
        img.map
            src: "images\map.gif"
            alt: "Legislation Map"
            width: "1118px"
            height: "644px"
            usemap: "#legislation"

        map.legislation
            name: "legislation"
            area#TX
                shape: "rect"
                coords: "0, 0, 60, 60"
                alt: "Texas"
                onmouseover: "tooltipInfo( "Texas" )"

        span
            div#tooltipHeader < "State Name"
            div#tooltip < "	Further information on the legislation of that state."

    script < stateSetUp();