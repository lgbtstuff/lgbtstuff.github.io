p.content
    ul#tabnav
        li < a
            href: "#"
            onclick: "openTab( "Timeline" )"
            "Timeline"
        li < a
            href: "#"
            onclick: "openTab( "Events" )"
            "Events"
        li < a
            href: "#"
            onclick: "openTab( "Organizations" )"
            "Organizations"
        li < a
            href: "#"
            onclick: "openTab( "People" )"
            "People"

    div.tab
        id: "Timeline"
        "This is the timeline."

        img.timeline#timeline
            src: "images\timeline.png"
            alt: "Timeline"
            width: "745px"
            height: "429px"
            usemap: "#timeline"

        map.timeline
            name: "timeline"
            area#first
                shape: "rect"
                coords: "0, 0, 60, 60"
                alt: "1960"
                onmouseover: "displayTooltip( 1 )"
                onmouseout: "hideTooltip()"

    div.tab
        id: "Events"
        "This is the events tab."

    div.tab
        id: "Organizations"
        "These are the organizations."

    div.tab
        id: "People"
        div#biocatbar
            button
                onclick: "searchBios( "printAll", "" )"
                "All Bios"

            button#alphaFirstCat
                onclick: "genButtonList( "bionav", "biographies", "", "alpha1" )"
                "Search by First Name"

            button#alphaSecondCat
                onclick: "genButtonList( "bionav", "biographies", "", "alpha2" )"
                "Search by Last Name"

            button#categoryCat
                onclick: "genButtonList( "bionav", "biographies", [ "Sexuality", "Gender", "Misc", "Trans" ], "general" )"
                "Search by Category"

            input#searchText
                type: "text"
                name: "searchbar"
                value: "Search Bar"
            button
                onclick: "searchBios( "searchbar", "" )"
                "Search"
            
            ul#bionav

        div#bioinfo < "Here are all the people alphabetically by last name. Select a categorization method to narrow your search down further."

    script
        clear( "tab" );
        loadTooltips();
        loadBios();
        genButtonList( "bionav", "biographies", "", "alpha2" );